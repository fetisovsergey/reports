 <div id="avatar">
	  <%= image_tag(@user.avatar.url(:medium), class: "img-circle",style:"border: 3px solid #FFFFFF;") %>
	  <h6><%= @user.name %></h6>
	  <% if @user != current_user %>
	  	<div style="width: auto;text-align:center;margin-left:5px;">
			<%= render 'users/follow_form' if signed_in? %>
	  	</div>
	  <% end %>
 </div>	

